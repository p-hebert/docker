FROM mhart/alpine-node:6.2.0

# Essentials
RUN apk update &&\
    apk upgrade &&\
    apk add \
    linux-headers \
    ca-certificates \
    bash

RUN mkdir -p /var/www/app
WORKDIR /var/www/app

# Install nodemon for global use
RUN npm install nodemon --global

EXPOSE 8080

CMD [ "/bin/sh", "./start.sh" ]
